<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/imagenPala"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerInside"
            android:adjustViewBounds="true"
            android:contentDescription="Imagen de la pala"/>


        <TextView
            android:id="@+id/nombrePala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de la Pala"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/marcaPala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marca: "
            android:textSize="18sp"/>


        <TextView
            android:id="@+id/materialPala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Material: "
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/descripcionPala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DescripciÃ³n larga de la pala"
            android:textSize="16sp"
            android:textStyle="italic"
            android:layout_marginTop="8dp"/>


    </LinearLayout>
</ScrollView>
